<brls:Box
    width="auto"
    height="auto"
    axis="row"
    justifyContent="center">

        <brls:Box
            width="auto"
            height="auto"
            axis="row"
            shrink="1.0"
            justifyContent="flexEnd"
            alignItems="flexEnd"
            flexWrap="wrap">

                <brls:Button
                    id="button_add"
                    width="auto"
                    height="100%"
                    shrink="1.0"
                    style="highlight"
                    text="@i18n/nxgui/components/buttons_addition"/>

                <brls:Button
                    id="button_subtract"
                    width="auto"
                    height="100%"
                    shrink="1.0"
                    style="highlight"
                    text="@i18n/nxgui/components/buttons_subtraction"/>

                <brls:Button
                    id="button_mutiply"
                    width="auto"
                    height="100%"
                    shrink="1.0"
                    style="highlight"
                    text="@i18n/nxgui/components/buttons_mutiplication"/>

                <brls:Button
                    id="button_divide"
                    width="auto"
                    height="100%"
                    shrink="1.0"
                    style="highlight"
                    text="@i18n/nxgui/components/buttons_division"/>

        </brls:Box>

</brls:Box>