<brls:Box
    width="auto"
    height="auto">

        <brls:Box
            width="auto"
            height="auto">
    
                <brls:Header
                    width="auto"
                    height="auto"
                    title="Welcome to Calculator_NX! Start calculating below:"
                    marginBottom="10px"/>

            
                <brls:Button
                    id="button_add"
                    width="auto"
                    height="auto"
                    style="highlight"
                    grow="1.0"
                    text="@i18n/nxgui/components/buttons_addition"/>

                <brls:Button
                    id="button_subtract"
                    width="auto"
                    height="auto"
                    style="highlight"
                    grow="1.0"
                    text="@i18n/nxgui/components/buttons_subtraction"/>

                <brls:Button
                    id="button_mutiply"
                    width="auto"
                    height="auto"
                    style="highlight"
                    grow="1.0"
                    text="@i18n/nxgui/components/buttons_mutiplication"/>

                <brls:Button
                    id="button_divide"
                    width="auto"
                    height="auto"
                    style="highlight"
                    grow="1.0"
                    text="@i18n/nxgui/components/buttons_division"/>
        </brls:Box>
</brls:Box>