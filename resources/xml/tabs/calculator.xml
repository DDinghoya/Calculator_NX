<brls:Box
    width="auto"
    height="auto" >

    <brls:Box
        width="auto"
        height="auto"
        axis="row"
        paddingLeft="10px"
        paddingRight="10px"
        paddingTop="5px"
        paddingBottom="5px" >

        <brls:Header
            width="auto"
            height="auto"
            text="@i18n/nxgui/welcome"
            marginBottom="10px" />

        <brls:Box
            width="100%"
            height="auto"
            axis="row"
            marginTop="30px"
            marginBottom="30px">

            
            <brls:Button
                id="button_add"
                width="auto"
                height="auto"
                style="primary"
                grow="1.0"
                marginLeft="20px"
                marginRight="20px"/>

            <brls:Button
                id="button_subtract"
                width="auto"
                height="auto"
                style="primary"
                grow="1.0"
                marginLeft="20px"
                marginRight="20px"/>

            <brls:Button
                id="button_mutiply"
                width="auto"
                height="auto"
                style="primary"
                grow="1.0"
                marginLeft="20px"
                marginRight="20px"/>

            <brls:Button
                id="button_divide"
                width="auto"
                height="auto"
                style="primary"
                grow="1.0"
                marginLeft="20px"
                marginRight="20px"/>

        </brls:Box>

    </brls:Box>

</brls:Box>